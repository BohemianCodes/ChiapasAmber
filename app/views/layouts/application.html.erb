<!DOCTYPE html>
<html>
<head>
  <title>Colors of Chiapas</title>

  <!-- Bootstap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <!-- Google fonts -->
  <link href="https://fonts.googleapis.com/css?family=Acme|Muli|Poiret+One" rel="stylesheet">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <!-- Bootstrap JS -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <!-- Mobile View -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= csrf_meta_tags %>

</head>

<body>

  <!-- Navbar (collapsed) -->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Colors of Chiapas", root_path, class: "navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right link-nav">
          <li><%= link_to "Products", products_path %><span class="sr-only">(current)</span></li>
          <li><%= link_to "About", static_pages_about_path %></li>
          <li><%= link_to "Contact", static_pages_contact_path %></li>
          <li><%= form_with(url: products_path, method: 'get', local: true, class: "navbar-form") do |form| %>
            <div class="form-group">
              <%= form.text_field :q, id: 'q', value: params[:q], class: 'form-control', placeholder: 'Search' %>
            </div>
            <%= form.submit 'Search', class: 'btn btn-default' %>
          <% end %></li>
          <li>
            <% if user_signed_in? %>
              <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'btn btn-default', id: 'sign-button') %>
            <% else %>
              <%= link_to('Login', new_user_session_path, class: 'btn btn-default', id: 'sign-button') %>
            <% end %>
          </li>
        </ul>

      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div class="container-fluid">
    <% if notice %>
      <div class="alert alert-success" role="alert">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if alert %>
      <div class="alert alert-warning" role="alert">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    <%= yield %>
  </div> <!-- end container -->

  <footer class="footer">
    <div class="container-fluid">
      <p>&copy; Eliane 2017</p>
    </div>
  </footer>
</body>
</html>
