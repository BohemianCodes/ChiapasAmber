<h2>Products</h2>

<div class="container">

    <% @products.in_groups_of(4, false) do |grouped_products| %>
    <div class="row">
      <%= render grouped_products %>
    </div>
    <% end %>
  
</div>

<br>
<% if signed_in? && current_user.admin? %>
  <%= link_to 'New Product', new_product_path %>
<% end %>
