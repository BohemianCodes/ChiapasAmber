<p id="notice"><%= notice %></p>

<h2>Products</h2>

<div class="container">
  <div class = "row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <%= image_tag(product.image_url, size: "100x100", class: "img-responsive p_img") %>
        <p class="p_name"><%= product.name %></p>
        <p class="p_description"><%= product.description %></p>
        <p class="p_price">â‚¬ <%= product.price %></p>
        <p><%= link_to 'Show', product %></p>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
        <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
  </div>
</div>

